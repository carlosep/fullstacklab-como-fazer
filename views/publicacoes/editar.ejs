<%- include('../header') %>
<form method="POST" action="/publicacoes/editar/<%= categoria %>/<%= publicacao.id %>">
    <div class="form-group">
        <label for="titulo">Título</label>
        <input type="text" class="form-control" id="titulo" placeholder="Insira o título da publicação" name="titulo" value="<%= publicacao.titulo %>">
    </div>
    <div class="form-group">
        <label for="conteudo">Conteúdo</label>
        <textarea type="text" class="form-control" id="conteudo" placeholder="Insira o conteúdo da publicação" name="conteudo"><%= publicacao.conteudo %></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Salvar</button>
</form>
<%- include('../footer') %>